# Database Configuration
# PostgreSQL connection string for production
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/workout_tracker"

# Alternative database URLs for different environments
# Development (Docker Compose)
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/workout_tracker"

# Production example
# DATABASE_URL="postgresql://username:password@hostname:port/database_name"

# Next.js Configuration
# Set to 'development' for local development, 'production' for deployment
NODE_ENV=development

# Application Settings
# App name displayed in the UI
NEXT_PUBLIC_APP_NAME="Workout Tracker"

# Default units system (imperial/metric)
NEXT_PUBLIC_DEFAULT_UNITS=imperial

# Enable/disable features
NEXT_PUBLIC_ENABLE_IMPORT=true
NEXT_PUBLIC_ENABLE_EXPORT=true

# Security (Optional - for production deployments)
# Generate a random string for session security
# NEXTAUTH_SECRET="your-secret-key-here"
# NEXTAUTH_URL="http://localhost:3000"

# External API Keys (Optional - for future integrations)
# Example: Fitness tracking APIs, weather services, etc.
# EXTERNAL_API_KEY="your-api-key-here"

# Database Pool Settings (Optional - for production optimization)
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# Logging Level (Optional)
# LOG_LEVEL=info

# File Upload Settings (Optional)
# MAX_FILE_SIZE=5242880  # 5MB in bytes
# ALLOWED_FILE_TYPES=csv,json,xml

# Cache Settings (Optional)
# REDIS_URL="redis://localhost:6379"
# ENABLE_CACHE=false

# Feature Flags (Optional)
# ENABLE_ANALYTICS=false
# ENABLE_NOTIFICATIONS=false
# ENABLE_SOCIAL_SHARING=false